<%= form_with(model: task, local: true) do |form| %>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
  
        <ul>
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <p><div class="field">
      <%= Task.human_attribute_name(:title) %><br>
        <%= form.text_field :title %>
    </div></p>
  
    <p><div class="field">
      <%= Task.human_attribute_name(:content) %><br>
        <%= form.text_area :content %>
    </div></p>

    <p><div class="field">
      <%= Task.human_attribute_name(:deadline_on) %><br>
        <%= form.date_field :deadline_on %>
    </div></p>

    <p><div class="field">
      <%= Task.human_attribute_name(:priority) %><br>
        <%= form.select :priority, Task.priorities.keys, prompt:"" %>
    </div></p>

    <p><div class="field">
      <%= Task.human_attribute_name(:status) %><br>
        <%= form.select :status, Task.statuses.keys, prompt:"" %>
    </div></p>

    <%= form.submit %>
    
  <% end %>
  
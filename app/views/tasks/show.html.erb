<div class="container mt-4">
  <h1><%= t('.Show Task') %></h1>
  
  <dl class="row">
    <dt class="col-sm-3"><strong><%= Task.human_attribute_name(:title) %>:</strong></dt>
    <dd class="col-sm-9"><%= @task.title %></dd>

    <dt class="col-sm-3"><strong><%= Task.human_attribute_name(:content) %>:</strong></dt>
    <dd class="col-sm-9"><%= @task.content %></dd>

    <dt class="col-sm-3"><strong><%= Task.human_attribute_name(:created_at) %>:</strong></dt>
    <dd class="col-sm-9"><%= @task.created_at %></dd>

    <dt class="col-sm-3"><strong><%= Task.human_attribute_name(:deadline_on) %>:</strong></dt>
    <dd class="col-sm-9"><%= @task.deadline_on %></dd>

    <dt class="col-sm-3"><strong><%= Task.human_attribute_name(:priority) %>:</strong></dt>
    <dd class="col-sm-9"><%= @task.priority %></dd>

    <dt class="col-sm-3"><strong><%= Task.human_attribute_name(:status) %>:</strong></dt>
    <dd class="col-sm-9"><%= @task.status %></dd>

    <dt class="col-sm-3"><strong>ラベル：</strong></dt>
    <dd class="col-sm-9">
      <% @labels.each do |label| %>
        <%= label.name %><br>
      <% end %>
    </dd>
  </dl>
  
  <p><%= link_to t('common.edit'), edit_task_path(@task), id: "edit-task", class: 'btn btn-primary' %></p>
  <p><%= link_to t('common.back'), tasks_path, id: "back", class: 'btn btn-secondary' %></p>
</div>
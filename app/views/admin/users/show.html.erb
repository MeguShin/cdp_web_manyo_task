<h1>ユーザ詳細ページ</h1>

<p>
    <strong>名前:</strong>
    <%= @user.name %>
</p>
<p>
    <strong>メールアドレス:</strong>
    <%= @user.email %>
</p>
<p>
    <strong>管理者権限:</strong>
    <%= @user.admin ? "あり" : "なし" %>
</p>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <th><%= link_to Task.human_attribute_name(:deadline_on), tasks_path(order: :deadline_on) %></th>
      <th><%= link_to Task.human_attribute_name(:priority), tasks_path(order: :priority) %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= l task.created_at %></td>
        <td><%= task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td class="show-task"><%= link_to t('common.show'), task %></td>
        <td class="edit-task"><%= link_to t('common.edit'), edit_task_path(task) %></td>
        <td class="destroy-task"><%= link_to t('common.destroy'), task, method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to t('common.back'), admin_users_path, id: "back" %>
</p>
